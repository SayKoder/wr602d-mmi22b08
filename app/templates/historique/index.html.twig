{% extends 'base.html.twig' %}

{% block title %}Historique des PDF{% endblock %}

{% block body %}
    <h1>Historique de vos PDFs générés</h1>
    
    {% if files|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom du fichier</th>
                    <th>Date de génération</th>
                    <th>Télécharger</th>
                </tr>
            </thead>
            <tbody>
                {% for file in files %}
                    <tr>
                        <td data-label="Nom du fichier">{{ file.pdfname }}</td>
                        <td data-label="Date de génération">{{ file.createdAt|date('d/m/Y H:i') }}</td>
                        <td data-label="Télécharger">
                           <a href="{{ asset('uploads/pdf/' ~ file.pdfname) }}" class="btn btn-primary" target="_blank">Télécharger</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun PDF généré.</p>
    {% endif %}
{% endblock %}
